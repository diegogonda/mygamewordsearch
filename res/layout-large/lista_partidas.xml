<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/foto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/descripcion_imagen"
        android:cropToPadding="true"
        android:paddingLeft="2dp"
        android:paddingTop="2dp"
        android:scaleType="center" />

    <TextView
        android:id="@+id/categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/foto"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textSize="@dimen/letra"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/naranjaoscuro" />

    <TextView
        android:id="@+id/tamano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/categoria"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/categoria"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textSize="@dimen/letra" />

</RelativeLayout>