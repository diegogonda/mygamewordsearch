        android:paddingBottom="10dp"
        android:text="@string/tema"
        android:textSize="@dimen/letra_grande" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@color/azul" />

     <vistas.GamasVista
        android:id="@+id/gamasVista1"
