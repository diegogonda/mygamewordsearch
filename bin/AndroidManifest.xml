<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.uvigo.gti.mygamewordsearch"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="actividades.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" 
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="actividades.JuegoActivity"
            android:label="@string/title_activity_juego"
            android:screenOrientation="portrait" 
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name="actividades.GamasActivity"
            android:label="@string/title_activity_gamas"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="actividades.AgregarPartidasActivity"
            android:label="@string/title_activity_agregar_partidas"
            android:screenOrientation="portrait"
            >
        </activity>
        <activity
            android:name="actividades.NuevasPalabrasActivity"
            android:label="@string/title_activity_nuevas_palabras" 
           >
        </activity>
        <activity
            android:name="actividades.ConfiguraActivity"
            android:label="@string/title_activity_configura"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" >
        </activity>
    </application>

</manifest>